<!-- res/layout/fragment_detail_report.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reportTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Report Type:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reporterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reportTypeTextView"
        android:layout_marginTop="8dp"
        android:text="Reporter Name:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reporterNameTextView"
        android:layout_marginTop="8dp"
        android:text="Location:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reportingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTextView"
        android:layout_marginTop="8dp"
        android:text="Reporting Date:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reporterEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reportingDateTextView"
        android:layout_marginTop="8dp"
        android:text="Reporter Email:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reporterEmailTextView"
        android:layout_marginTop="16dp"
        android:text="Update" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUpdate"
        android:layout_marginTop="8dp"
        android:text="Delete" />

    <!-- Anda dapat menambahkan elemen UI lainnya sesuai kebutuhan -->
</RelativeLayout>
