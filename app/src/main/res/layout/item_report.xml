<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_report.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textReportType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Type"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textReporterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReportType"
        android:layout_marginTop="8dp"
        android:text="Reporter Name"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textReportingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReporterName"
        android:layout_marginTop="8dp"
        android:text="Reporting Date"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>
</RelativeLayout>
